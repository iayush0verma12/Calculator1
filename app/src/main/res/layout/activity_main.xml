<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007474"
    tools:context=".MainActivity"
    >

    <EditText

        android:id="@+id/ResultED"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:hint="e.g 8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CalculationED"
        tools:ignore="ContentDescription" />

    <EditText

        android:id="@+id/CalculationED"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="4dp"
        android:hint="e.g 8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btntwo"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#40e0d0"
        android:text="Backspace"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnOne"
        app:layout_constraintTop_toTopOf="@id/btnOne" />

    <Button
        android:id="@+id/btn7"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="#008080"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOne" />

    <Button
        android:id="@+id/btn8"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#008080"
        android:text="8"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7" />

    <Button
        android:id="@+id/btn9"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#008080"
        android:text="9"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8" />

    <Button
        android:id="@+id/btnDivide"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#40e0d0"
        android:text="/"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9" />

    <Button
        android:id="@+id/btn4"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="#008080"
        android:text="4"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn7" />

    <Button
        android:id="@+id/btn5"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#008080"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4" />

    <Button
        android:id="@+id/btn6"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#008080"
        android:text="6"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5" />

    <Button
        android:id="@+id/btnMultiply"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#40e0d0"
        android:text="*"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6" />

    <Button
        android:id="@+id/btn1"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="#008080"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btn2"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#008080"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1" />

    <Button
        android:id="@+id/btn3"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#008080"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2" />

    <Button
        android:id="@+id/btnSub"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#40e0d0"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3" />

    <Button
        android:id="@+id/btnDot"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="#008080"
        android:text="."
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn0"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#008080"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnDot"
        app:layout_constraintTop_toTopOf="@id/btnDot" />

    <Button
        android:id="@+id/btnEQ"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#ffc87c"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnPlus"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#40e0d0"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnEQ"
        app:layout_constraintTop_toTopOf="@id/btnEQ" />

    <Button
        android:id="@+id/btnOne"
        style="@style/Base.Theme.Calculator1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="#40e0d0"
        android:text="CLEAR"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ResultED" />

</androidx.constraintlayout.widget.ConstraintLayout>